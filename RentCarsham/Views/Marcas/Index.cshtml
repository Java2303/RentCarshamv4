@model IEnumerable<RentCarsham.Models.Marca>

@{
    ViewData["Title"] = "Marcas Disponibles";
}
<header class="custom-header py-4">
    <h1 class="display-5 text-white">Marcas de Vehículos</h1>
    <p class="lead text-white">Gestiona las marcas disponibles para tus vehículos</p>
</header>


<p class="text-right">
    <a asp-action="Create" class="btn btn-success">Agregar Nueva Marca</a>
</p>

<table class="table table-striped table-hover rounded shadow">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Pais)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Pais)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MarcaId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.MarcaId" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.MarcaId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>