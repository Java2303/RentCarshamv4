@model RentCarsham.Models.Marca

@{
    ViewData["Title"] = "Detalles de la Marca";
}

<header class="custom-header py-4">
    <h1 class="display-5 text-white">Detalles de la Marca</h1>
</header>

<div class="container">
    <div class="card shadow-lg rounded">
        <div class="card-body">
            <h4 class="card-title">Marca</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold text-dark">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9 text-muted">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-dark">
                    @Html.DisplayNameFor(model => model.Pais)
                </dt>
                <dd class="col-sm-9 text-muted">
                    @Html.DisplayFor(model => model.Pais)
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.MarcaId" class="btn btn-warning btn-lg">Editar</a> |
        <a asp-action="Index" class="btn btn-info btn-lg ml-2">Volver a la Lista</a>
    </div>
</div>