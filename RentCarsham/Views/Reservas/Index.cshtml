@model IEnumerable<RentCarsham.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<header class="custom-header py-4">
    <h1 class="display-5 text-white">Reservas Actuales</h1>
    <p class="lead text-white">Gestiona y consulta las reservas de vehículos fácilmente</p>
</header>

<p class="text-right">
    <a asp-action="Create" class="btn btn-success">Agregar Nueva Reserva</a>
</p>

<table class="table table-striped table-hover rounded shadow">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FechaReserva)</th>
            <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
            <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
            <th>@Html.DisplayNameFor(model => model.Usuario.UsuarioId)</th>
            <th>@Html.DisplayNameFor(model => model.Vehiculo.VehiculoId)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FechaReserva)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaFin)</td>
                <td>@Html.DisplayFor(modelItem => item.Usuario.UsuarioId)</td>
                <td>@Html.DisplayFor(modelItem => item.Vehiculo.VehiculoId)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservaId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ReservaId" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.ReservaId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
