@model IEnumerable<RentCarsham.Models.Alquilere>

@{
    ViewData["Title"] = "Alquileres";
}

<header class="custom-header py-4">
    <h1 class="display-5 text-white">Historial de Alquileres</h1>
    <p class="lead text-white">Consulta y gestiona los alquileres realizados</p>
</header>

<p class="text-right">
    <a asp-action="Create" class="btn btn-success">Registrar Nuevo Alquiler</a>
</p>

<table class="table table-striped table-hover rounded shadow">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FechaAlquiler)</th>
            <th>@Html.DisplayNameFor(model => model.FechaDevolucion)</th>
            <th>@Html.DisplayNameFor(model => model.TotalPago)</th>
            <th>@Html.DisplayNameFor(model => model.Usuario.UsuarioId)</th>
            <th>@Html.DisplayNameFor(model => model.Vehiculo.VehiculoId)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FechaAlquiler)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaDevolucion)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalPago)</td>
                <td>@Html.DisplayFor(modelItem => item.Usuario.UsuarioId)</td>
                <td>@Html.DisplayFor(modelItem => item.Vehiculo.VehiculoId)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AlquilerId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.AlquilerId" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.AlquilerId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
